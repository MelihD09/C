
int k1,k2,h;

printf("Lutfen dokdortgenin kisa kenarini giriniz: ");
scanf("%d",&k1);

printf("Lutfen dikdortgenin uzun kenarini giriniz: ");
scanf("%d",&k2);

printf("Lutfen dikdortgenin yusekligini giriniz: ");
scanf("%d",&h);

printf(" Dikdortgenin Taban Alani:%d \n Yanal Alanlar Toplami:%d \n Toplam alani:%d \n Hacmi:%d \n ",k1*k2,4*(k1*k2),6*(k1*k2),h*k1*k2);

