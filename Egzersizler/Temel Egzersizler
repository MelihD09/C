float a,b,isaret;

do
{

printf("Sirasiyle 2 sayi giriniz: ");
scanf("%f%f",&a,&b);

isaret=a*b;

if(isaret<0)
{
    printf("Girdiginiz sayilerin carpim sonucu negatiftir\n");
}
else if(isaret>0)
{
    printf("Girdiginiz sayilerin carpim sonucu pozitiftir\n");
}
else
{
    printf("Girdiginiz sayilarin carpim sonucu 0'dir\n");
}
}
while(isaret);

