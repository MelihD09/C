int n,i;
float sonuc;

do
{
    printf("Bir n degeri giriniz: ");
    scanf("%d",&n);
}
while(n<1);


for(i=1;i<=n;i++)
{
    sonuc +=(float)1/i;
}
printf("Sonuc: %.3f",sonuc);

