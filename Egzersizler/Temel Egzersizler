int x;

printf("Bir pozitif tam sayi giriniz: ");
scanf("%d",&x);

if(x>=0)
{
    if(x%13==0 && x%17==0)
    {
        printf("Girdiginiz sayi 13 ve 17 ile bolunebilmektedir");
    }
    else if(x%13==0)
    {
        printf("Girdiginiz sayi 13 ile bolunebilmektedir");
    }
    else if(x%17==0)
    {
        printf("Girdiginiz sayi 17 ile bolunebilmektedir");
    }
    else
    {
        printf("Girdiginiz sayi 13 veya 17 ile bulunememektedir");
    }

}
else
{
    printf("Girdiginiz sayi pozitif tam sayi degildir!");
}

