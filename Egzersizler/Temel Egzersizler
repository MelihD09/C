scanf("%d%d",&a,&b);


if(a==b)
{
    printf("Girdiginiz degerler birbirine esittir \n");
}
else if (a<b)
{
    printf("Girdiginiz 2. sayi daha buyuktur \n");
}
else if(b<a)
{
    printf("Girdiginiz 1. sayi daha buyuktur \n");
}


if(a!=b)
{
    printf("Girdiginiz degerler birbirine esit degildir \n");
}

if(a%b==0 && a!=b)
{
    printf("Girdiginiz Ilk deger ikinci degerin katidir ");
}

if(b%a==0 && a!=b)
{
    printf("Girdiginiz Ikinci deger ilk degerin katidir");
