float x;

do
{

printf("Bir sayi giriniz: ");
scanf("%f",&x);
if(x<0)
{
    printf("Lutfen pozitif bir sayi giriniz:\n");
}
if(x<0)continue;

printf("Girdiginiz sayinin karekoku: %f \n",sqrt(x));
}
while(x);

