char cumle[100];
int i;
printf("Lutfen bir cumle giriniz\n");
gets(cumle);

for(i=0;cumle[i];i++)
{
    printf("%c\n",cumle[i]);
}

--------------------------------------------------------------------------------------------------------

char kelime[100];
int i=0;
int j=0;
printf("Lutfen bir cumle giriniz\n");
gets(kelime);

while(i<strlen(kelime))
{
    j=0;
    while(j<=i)
    {
        printf("%c",kelime[j]);
        j++;
    }
    printf("\n");
    i++;
}

