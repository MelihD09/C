
char cumle[100];
int i=0;
int sayac;
sayac=0;

printf("Lutfen bir cumle giriniz: ");
gets(cumle);

//space'in deÄŸeri = 32

while(cumle[i])
    {
        if(cumle[i]== 32)
        {
          sayac++;
        }
        i++;
    }
 printf("Girdiginiz cumledeki kelime sayisi: %d",sayac+1);

