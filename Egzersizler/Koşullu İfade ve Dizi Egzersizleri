int a,b;
char op;

printf("Yapacaginiz islemi seciniz: (+,-)");
scanf("%c",&op);

printf("2 adet sayi giriniz: ");
scanf("%d%d",&a,&b);


if(a==0 || b==0)
{
    printf("Islem gecersizdir!");
}
else
{
printf("1/%d %c 1/%d = ",a,op,b);
switch(op)
{
    case '+' :
    {
        printf("%d/%d",a+b,a*b);
    }
    break;

    case '-' :
        {
            printf("%d/%d",a-b,a*b);
        }
        break;
        default :
        {
            printf("Yanlis operator girdiniz!");
        }
}
}

