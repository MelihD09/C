#define tavhiz 0.038
#define kushiz 0.012
int main()
{
    float t=1042,k=2272;
    int yil=0;

   while(t<k)
   {
        t+=t*tavhiz;
        k+=k*kushiz;
        yil++;
        printf("\n***%d.yil*** \ntavsan=%d\nkus=%d\n",yil,(int)t,(int)k);
   }
printf("\nTavsanlar kuslari %d. yilda gecer ",yil);

