
int melih[7]={1,5,4,3,54,84,23};

printf("%d",melih[4]);

//54 sayısını basar çünkü 0'dan başlayarak numaralandırılır.

----------------------------------------------------------------------------------------------------------------------------------------------

int melih[12];
int i;

for(i=0;i<=12;i++)
{
    melih[i]=3*i;
}
for(i=0;i<=12;i++)
{
    printf("%d \n",melih[i]);
}

//For döngüsü ile dizinin içini doldurduktan sonra for döngüsü ile dizinin karakterlerini bastır.

-----------------------------------------------------------------------------------------------------------------------------------------------

int melih[5]={12,45,78,98,65};
 int i;

 melih[2]=11;


 for(i=0;i<5;i++)
{
    printf("%d \t",melih[i]);
}

//Sonradan diziye müdehale yapılabilir.(78-->11)

-------------------------------------------------------------------------------------------------------------------------------------------

int sa[5];
 int i;

 for(i=0;i<5;i++)
 {
     scanf("%d",&sa[i]);
 }

 for (i=0;i<5;i++)
{
    printf("%d \t",sa[i]);
}

//For döngüsü ile kullanıcıdan sayılar alınır ve sonraki for döngüsü ile ekrana basılır.

--------------------------------------------------------------------------------------------------------------------------------------------

int sa[5];
 int i=0;

 while (i<5)
 {
     scanf("%d",&sa[i]);
     i++;
 }

 i=0;

 while(i<5)
 {
     printf("%d \t",sa[i]);
     i++;
 }

//While döngüsü ile kullanıcıdan sayılar alınır ve sonraki while döngüsü ile ekrana basılır.

-------------------------------------------------------------------------------------------------------------------------

int sa[5];
 int i=0;

 do
 {
     scanf("%d",&sa[i]);
     i++;
 } while (i<5);

 i=0;

 do
 {
     printf("%d \t",sa[i]);
     i++;
 }while(i<5);
