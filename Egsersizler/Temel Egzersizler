//t=18,b=17,s=19

char kod;

float alan,ucret=0;

printf("Alacaginiz hali hangisidir ? (T-B-S) ");
scanf("%c",&kod);

printf("Lutfen alani giriniz: ");
scanf("%f",&alan);

if(kod=='T')
{
    ucret=alan*18;
}
else if(kod=='B')
{
    ucret=alan*17;
}
else if(kod=='C')
{
    ucret=alan*19;
}
else
{
    printf("Kodunuz dogru degildir!");
}

    printf("Borcunuz: %.3f ",ucret);
    
