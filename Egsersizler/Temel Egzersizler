char mel;

printf("Lutfen bir karakter giriniz:\n");
scanf("%c",&mel);

if((mel>='A') && (mel<='Z'))
{
printf("Kucuk harfiniz: %c\n",tolower(mel));
}
else
{
    printf("Yanlis karakter girdiniz!");
}

