
//%.3f = Virgülden sonra 3 basamağı göster.
//Float ondalıklı sayılar için


	float sayi1,sayi2,toplam,fark,carp,bolme;
	
	sayi1=71.2;
	sayi2=19.2;
	
	toplam=sayi1+sayi2;
	fark=sayi1-sayi2;
	carp=sayi1*sayi2;
	bolme=sayi1/sayi2;
	
	printf("%f\n",toplam);
	printf("%f\n",fark);
	printf("%f\n",carp);
	printf("%f",bolme);
	
  ---------------------------------------------------------------------------------------------------------------------------------------------------------

	float sayi1,sayi2,toplam,fark,carpma,bolme;

    printf("Birinci sayiyi giriniz: ");
    scanf("%f",&sayi1);

    printf("Ikinci sayiyi giriniz: ");
    scanf("%f",&sayi2);

    toplam=sayi1+sayi2;
    fark=sayi1-sayi2;
    carpma=sayi1*sayi2;
    bolme=sayi1/sayi2;


    printf("Toplam: %f\n",toplam);
    printf("Fark: %f\n",fark);
    printf("Carpma: %f\n",carpma);
    printf("Bolme: %f",bolme);
 
 ---------------------------------------------------------------------------------------------------------------------------------------------------------------
 
 

	float maas,yenimaas;

printf("Maasinizi giriniz: ");
scanf("%f",&maas);

yenimaas=maas+maas*18/100;

printf("Yeni maasiniz: %f",yenimaas);
	

