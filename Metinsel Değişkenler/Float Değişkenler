	//Silindirin alanı = Taban alanı x yükseklik (Taban alanı=pi*r*r)
	
float pi,r,h,tabanalani,silindirinalani;
	
	printf("**********Silindirin Alan Hesabi: **********\n\n");
	
	pi=3.14;
	
	printf("Yaricapi Giriniz: ");
	scanf("%f",&r);
	
	printf("Yuksekligi Giriniz: ");
	scanf("%f",&h);
	
	tabanalani=pi*r*r;
	
	silindirinalani=tabanalani*h;
	
	printf("Silindirin Alani: %f",silindirinalani);
	

-------------------------------------------------------------------------------------------------------------------------------------------------------------

	//Tyt puanı hesaplama
	//Türkçe: 3.3
	//Matematik: 3.3
	//Sosyal: 3.4
	//Fen: 3.4
	//obp: 0.6
	//taban: 100
	
	float turkce,mat,sos,fen,obp,taban,tyt;
	
	printf("***************TYT PUAN HESAPLAMA***************\n\n");
	
	taban=100;
	
	printf("Obp puaninizi giriniz: ");
	scanf("%f",&obp);
	
	printf("Turkce netinizi giriniz: ");
	scanf("%f",&turkce);
	
	printf("Matematik netinizi giriniz: ");
	scanf("%f",&mat);
	
	printf("Sosyal netinizi giriniz: ");
	scanf("%f",&sos);
	
	printf("Fen netinizi giriniz: ");
	scanf("%f",&fen);
	
	tyt=turkce*3.3+mat*3.3+sos*3.4+fen*3.4+obp*0.6+taban;
	
	printf("Tyt Puaniniz: %f",tyt);



