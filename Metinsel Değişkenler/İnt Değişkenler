
int sayi1,sayi2,topla,carp,fark,bol;
	
	sayi1=135;
	sayi2=45;
	topla=sayi1+sayi2;
	fark=sayi1-sayi2;
	carp=sayi1*sayi2;
	bol=sayi1/sayi2;
	
	printf("Toplam Sonuc: %d\n",topla);
	printf("Fark Sonuc: %dÂ¨\n",fark);
	printf("Carpma Sonuc: %d\n",carp);
	printf("Bolme Sonuc: %d",bol);
  
  
  
