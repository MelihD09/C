 ----------------------------------------------------------------------------------------------------------------------------------------------------------------
 
 
 
 int s1,s2,s3,proje,ortalama;
	
	printf("*****	Ogrenci Sinav Ortalama Sistemi	*****\n\n");
	
	
	printf("Birinci sinavinizi giriniz: ");
	scanf("%d",&s1);
	
	printf("Ikinci sinavinizi giriniz: ");
	scanf("%d",&s2);
	
	printf("Ucuncu sinavinizi giriniz: ");
	scanf("%d",&s3);
	
	printf("Proje notunuzu giriniz: ");
	scanf("%d",&proje);
	
	
	ortalama=(s1+s2+s3+proje)/4;
	
	if(ortalama>=50)
	{
		printf("Dersi gectiniz: %d ",ortalama);
	}
	else
	{
		printf("Dersi gecemediniz: %d",ortalama);
	}
	
	
---------------------------------------------------------------------------------------------------------------------------------------------------------------

	 int sayi;
	
	printf("Sayiyi giriniz: ");
	scanf("%d",&sayi);
    
    
	if(sayi%2==0)
	{
		printf("Girdiginiz Sayi Cifttir");
	}
	else
	{
		printf("Girdiginiz Sayi Tektir");
	}
	
-----------------------------------------------------------------------------------------------------------------------------------------------------------------

    int x;
    
    printf("Sayiyi giriniz: ");
    scanf("%d",&x);
    
    if(x%2==0 && x%3==0)
    {
    	printf("Girmis oldugunuz sayi 2'ye ve 3'e tam bolunur");
	}
    else 
    {
    	printf("Girmis oldugunuz sayi 2'ye ve 3'e tam bolunemez");
	}
    
    -------------------------------------------------------------------------------------------------------------------------------------------------------------
    
        int x;
    
    printf("Sayiyi giriniz: ");
    scanf("%d",&x);
    
    if(x%2==0 || x%3==0)
    {
    	printf("Girmis oldugunuz sayi 2'ye veya 3'e tam bolunur");
	}
    else 
    {
    	printf("Girmis oldugunuz sayi 2'ye veya 3'e tam bolunemez");
	}
    
    --------------------------------------------------------------------------------------------------------------------------------------------------------------
    
    printf("*****	Suyun Durumu	*****\n\n");
    
    int su;
    
    printf("Suyun sicakligini giriniz: ");
    scanf("%d",&su);
    
    if(su<=0)
    {
    	printf("Su buz halde\n");
	}
    if(su>0 && su<100)
    {
    	printf("Su sivi halde\n");
	}
    if(su>=100)
	{
		printf("Su buhar halde\n");
	}
	
	
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    













