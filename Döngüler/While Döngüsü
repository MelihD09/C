  int i=0;

for(i=0;i<=10;i++)
{
    if (i==4)
    {
        break;
    }
    printf("%d \n",i);
}

//Program 4'e kadar basar (4 dahil değil)

 int i=0;

for(i=0;i<=10;i++)
{ 
    printf("%d \n",i);
    
     if (i==4)
    {
        break;
    }
}

//Program 4'e kadar basar (4 dahil)
-------------------------------------------------------------------------------------------------------------------------------------------
int i=0;

for(i=0;i<=10;i++)
{
     if (i==5)
    {
        continue;
    }
    
    printf("%d \n",i);

}

//10'a kadar basar 5 sayısını atlar
